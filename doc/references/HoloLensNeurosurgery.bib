@Article{Ducruet2011,
  author    = {Andrew F. Ducruet and Bartosz T. Grobelny and Brad E. Zacharia and Zachary L. Hickman and Peter L. DeRosa and Kristen Anderson and Eric Sussman and Austin Carpenter and E. Sander Connolly},
  title     = {The surgical management of chronic subdural hematoma},
  journal   = {Neurosurgical Review},
  year      = {2011},
  volume    = {35},
  number    = {2},
  pages     = {155--169},
  month     = {sep},
  abstract  = {Chronic subdural hematoma (cSDH) is an increasingly common neurological disease process. Despite the wide prevalence of cSDH, there remains a lack of consensus regarding numerous aspects of its clinical management. We provide an overview of the epidemiology and pathophysiology of cSDH and discuss several contro- versial management issues, including the timing of post- operative resumption of anticoagulant medications, the effectiveness of anti-epileptic prophylaxis, protocols for mobilization following evacuation of cSDH, as well as the comparative effectiveness of the various techniques of surgical evacuation. A PubMed search was carried out through October 19, 2010 using the following keywords: “subdural hematoma”, “craniotomy”, “burr-hole”, “man- agement”, “anticoagulation”, “seizure prophylaxis”, “anti- platelet”, “mobilization”, and “surgical evacuation”, alone and in combination. Relevant articles were identified and back-referenced to yield additional papers. A meta-analysis was then performed comparing the efficacy and complica- tions associated with the various methods of cSDH evacuation. There is general agreement that significant coagulopathy should be reversed expeditiously in patients presenting with cSDH. Although protocols for gradual resumption of anti-coagulation for prophylaxis of venous thrombosis may be derived from guidelines for other neurosurgical procedures, further prospective study is necessary to determine the optimal time to restart full-dose anti-coagulation in the setting of recently drained cSDH. There is also conflicting evidence to support seizure prophylaxis in patients with cSDH, although the existing literature supports prophylaxis in patients who are at a higher risk for seizures. The published data regarding surgical technique for cSDH supports primary twist drill craniostomy (TDC) drainage at the bedside for patients who are high-risk surgical candidates with non-septated cSDH and craniotomy as a first-line evacuation technique for cSDH with significant membranes. Larger prospective studies addressing these aspects of cSDH management are necessary to establish definitive recommendations.},
  doi       = {10.1007/s10143-011-0349-y},
  file      = {:Ducret2012.pdf:PDF},
  group     = {hematoma, meta-analysis},
  publisher = {Springer Nature},
  review    = {Review of chronic SDH surgical management, covering multiple outcomes of various management options.

- incidence of cSDH ranges from 3.4 per 100,000 (patients under 65) to 8-58 per 100,000 (patients over 65)
- definitive diagnosis of cSDH is with CT imaging
- acute and chronic SDH with significant thick and/or calcified membranes is best evacuated with craniotomy but for the rest, escavation is possible via twist drill craniostomy, burr-hole craniostomy or craniotomy
- craniotomy requires general anestetic, is most invasive, takes longest and has the greatest volume of blood loss
- burr-hole craniostomy is most frequently done under local or general in the OR, either with 2 or 1 burr hole(s)
- twist-drill craniostomy can be done by bedside under local making it an attractive option for poor surgical candidates, but the blood must be very liquified
- table 2 and figure 2 outline outcomes of complications, mortality, recurrence, reoperation, neurologic improvement for the 3 procedures
- complications were most frequent in BCH, but BCH was better for mortalitiy and recurrence; neurologic improvement was similar in all},
}

@Article{Eftekhar2016,
  author    = {Eftekhar, Behzad},
  title     = {{A Smartphone App to Assist Scalp Localization of Superficial Supratentorial Lesions - Technical Note}},
  journal   = {World Neurosurgery},
  year      = {2016},
  volume    = {85},
  pages     = {359--363},
  issn      = {18788769},
  abstract  = {Background Neuronavigation is an established technology in neurosurgery. In parts of the world and certain circumstances in which neuronavigation is not easily available or affordable, alternative techniques may be considered. Objective An app to assist scalp localization of superficial supratentorial lesions has been introduced, and its accuracy has been compared with established neuronavigation systems. Methods Sina is a simple smartphone app that overlaps the transparent patients' computed tomography/magnetic resonance images on the background camera. How to use Sina intraoperatively is described. The app was used for scalp localization of the center of the lesions in 11 patients with supratentorial pathologies {\textless}3 cm in longest diameter and {\textless}2 cm from the cortex. After localization of the lesion using Sina, the center of the lesion was marked on the scalp using standard neuronavigation systems and the deviations were measured. Results Implementation of Sina for intraoperative scalp localization is simple and practical. The center of the lesions localized by Sina was 10.2 ± 2 mm different from localization done by standard neuronavigation systems. Conclusion When neuronavigation is not easily available or affordable, Sina can be helpful for scalp localization and preoperative planning of the incision for selected supratentorial pathologies.},
  doi       = {10.1016/j.wneu.2015.09.091},
  file      = {:Eftekhar2016.pdf:PDF},
  group     = {smartphone or tablet, clinical},
  isbn      = {6198123898},
  keywords  = {Image-guided surgery,Key words Augmented reality,Mobile applications,Neuronavigation},
  pmid      = {26455767},
  publisher = {Elsevier Inc},
  review    = {Used an android app (Sina) for scalp localization of the lesion center in 11 patients with supratentorial pathologies.

- after localization of the lesion using Sina, traditional neuronavigation (StealthStation or Brainlab) was used
- center of the lesions localized by Sina was 10.2 ± 2 mm different from localization done by standard neuronavigation},
  url       = {http://dx.doi.org/10.1016/j.wneu.2015.09.091},
}

@Article{Eftekhar2016a,
